<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".LecturesActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:id="@+id/course_title_placeholder"
                android:textSize="18dp"
                android:text="Task is here"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:id="@+id/course_description_placeholder"
                android:textSize="18dp"
                android:text="Task is here"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:id="@+id/course_year_placeholder"
                android:textSize="18dp"
                android:text="Task is here"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                />




            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="30dp"
                        android:layout_marginTop="10dp"
                        android:textSize="24dp"
                        android:text="Lectures"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        />



                    <ListView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lectures_listview"
                            android:layout_margin="20dp"

                            ></ListView>


                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>